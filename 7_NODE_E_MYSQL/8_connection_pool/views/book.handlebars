<div id="book-page">
    <div class="container">
        <h1> {{book.title}} </h1>
        <p>Este livro contém {{book.page}} páginas</p>
        <div class="actions">
            <a href="/books/edit/{{book.id}}">Editar</a>
            <form action="/books/remove/{{book.id}}" method="post">
                <input type="submit" value="Remover">
            </form>
        </div>
    </div>
    <button>
        <a href="/books">Voltar</a>
    </button>
</div>